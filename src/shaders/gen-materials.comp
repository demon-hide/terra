#version 450 core
#define SOFT_DOUBLE 1


#define xdouble double
#define CONST_1 1.0
#define CONST_1_4511 1.4511
#define CONST_1_8044 1.8044
#define CONST_INV_0_9022 (1.0/0.9022)
